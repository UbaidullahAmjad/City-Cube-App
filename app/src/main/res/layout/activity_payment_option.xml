        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical"
        tools:context=".activities.PaymentOptionActivity">

        <include
            android:id="@+id/reservation_toolbar"
            layout="@layout/toolbar" />


