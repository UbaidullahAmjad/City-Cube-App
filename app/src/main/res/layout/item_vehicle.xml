<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.cardview.widget.CardView
    android:layout_width="@dimen/_130sdp"
    android:layout_height="@dimen/_130sdp"
    android:layout_margin="@dimen/_8sdp"
    android:elevation="@dimen/_10sdp"
    >
    <RelativeLayout
        android:id="@+id/rlVehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        >
        <RelativeLayout
            android:id="@+id/rlMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:text="@string/small"
                android:textAllCaps="true"
                android:fontFamily="@font/baloo_bold"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/tvVehicleSize"
                android:layout_below="@+id/tvVehicleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:text="6 M3"
                android:textAllCaps="true"
                android:fontFamily="@font/baloo_bold"
                android:textSize="@dimen/_10sdp"/>

            <ImageView
                android:id="@+id/ivVehicle"
                android:layout_above="@+id/tvVehicleWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jumbo"
                android:layout_centerHorizontal="true"
                />


            <TextView
                android:id="@+id/tvVehicleWeight"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="800 kgs"
                android:textAllCaps="false"
                android:fontFamily="@font/baloo_bold"
                android:textSize="@dimen/_10sdp"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>




        <ImageView
            android:id="@+id/ivInfo"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_5sdp"
            android:src="@mipmap/user"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/tvi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Keshav Hello"
            android:visibility="gone"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>




</layout>